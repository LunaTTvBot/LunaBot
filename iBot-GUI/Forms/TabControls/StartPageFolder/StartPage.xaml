<UserControl x:Class="iBot_GUI.Forms.TabControls.StartPageFolder.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:vectors="clr-namespace:iBot_GUI.Template.Controls.Vectors"
             mc:Ignorable="d"
             Background="{DynamicResource MainBackgroundBrush}"
             xmlns:startPageFolder="clr-namespace:iBot_GUI.Forms.TabControls.StartPageFolder"
             d:DesignHeight="800" d:DesignWidth="600">
    <Grid x:Name="Root">
        <Grid x:Name="Head" Margin="0,0,0,0">
            <Grid x:Name="SideBar" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="200"
                  Background="{DynamicResource MainBackgroundBrushSecondary}">
                <Rectangle Fill="{DynamicResource BorderBrush}" Width="2" Margin="0" VerticalAlignment="Stretch"
                           HorizontalAlignment="Right" d:LayoutOverrides="Height" />

                <TextBlock Text="iBot" Foreground="{DynamicResource TextBrushPrimary}" FontSize="32"
                           Margin="25,36.5,13,0" Height="50"
                           VerticalAlignment="Top" />
                <TextBlock Text="by SuNflOw1991" Foreground="{DynamicResource TextBrushSecondary}" FontSize="16"
                           Margin="28,76,10,0"
                           Height="20" VerticalAlignment="Top" />
                <ed:RegularPolygon Fill="{DynamicResource BorderBrush}" HorizontalAlignment="Left" Height="19"
                                   InnerRadius="1"
                                   Margin="-16,51,0,0" PointCount="3" Stretch="Fill" VerticalAlignment="Top" Width="48"
                                   RenderTransformOrigin="0.5,0.5">
                    <ed:RegularPolygon.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="90" />
                            <TranslateTransform />
                        </TransformGroup>
                    </ed:RegularPolygon.RenderTransform>
                </ed:RegularPolygon>

                <!--<Rectangle Fill="{DynamicResource BorderBrush}" Height="1" Width="150" Margin="25,110.25,25,0" VerticalAlignment="Top"
                           d:LayoutOverrides="Height" />-->
            </Grid>
            <Grid x:Name="MainContent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="225, 25, 0, 0">
                <Grid Margin="10,10,10,10">
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="Welcome to iBot" Foreground="{DynamicResource TextBrushPrimary}" FontSize="32"
                                   Margin="0,0,0,0"
                                   VerticalAlignment="Top" />
                        <Rectangle Fill="{DynamicResource BorderBrushSecondary}" Height="1" Margin="0,7,0,0"
                                   VerticalAlignment="Top" HorizontalAlignment="Stretch"
                                   d:LayoutOverrides="Height" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Grid x:Name="Body" Margin="0,117,0,0">
            <TabControl Style="{DynamicResource SidebarTabControl}"
                        Background="{DynamicResource MainBackgroundBrushSecondary}"
                        BorderBrush="{DynamicResource BorderBrush}" TabStripPlacement="Left"
                        x:Name="TabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TabItem x:Name="ConnectionDetailsTab" Style="{DynamicResource SidebarTabItem}" Width="196" Header="Start"
                         d:DataContext="{d:DesignInstance {x:Type startPageFolder:ConnectionDetails} }">
                    <TabItem.Content>
                        <Grid>
                            <ScrollViewer HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch"
                                          VerticalScrollBarVisibility="Auto">
                                <Grid Margin="0,0,10,0">
                                    <StackPanel>
                                        <TextBlock x:Name="ConnectionMessageBlock" TextWrapping="Wrap">
                                            Please enter your connection details so that the application can connect to your bot account. Press OK to save your token.
                                        </TextBlock>
                                        <!-- Hidden -->
                                        <Expander Margin="0,10" Header="More Information" HorizontalAlignment="Stretch"
                                                  Padding="5"
                                                  Visibility="Collapsed"
                                                  HorizontalContentAlignment="Stretch">
                                            <Grid>
                                                <StackPanel>
                                                    <TextBlock TextWrapping="Wrap">
                                                        <TextBlock FontWeight="Bold">Nick:</TextBlock> The Nickname of your Bot Account. Don't use your broadcaster account as bot account. If you don't have a bot account yet, you can register one for free at twitch.
                                                    </TextBlock>
                                                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
                                                        <TextBlock FontWeight="Bold">Token:</TextBlock> This application don't want to know you real password. Because of this we need a password token. Click the "Get Token" Link and login with your bot account. The website will show you your token after you authorized them to connect to your account. You have to copy that whole token (oauth:asda6sda9sdas5) into the input field.
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Expander>
                                        <!-- End Hidden -->
                                        <Grid Margin="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="20" />
                                            </Grid.RowDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="0">
                                                <Label Padding="0,5" Margin="0" HorizontalAlignment="Left"
                                                       HorizontalContentAlignment="Left">
                                                    <Label.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                        </Style>
                                                    </Label.Resources>
                                                    Nick:
                                                </Label>
                                                <TextBox x:Name="NickBox" Text="{Binding Nick, UpdateSourceTrigger=LostFocus}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
                                                <Label Padding="0,5" Margin="0" HorizontalAlignment="Left"
                                                       HorizontalContentAlignment="Left">
                                                    <Label.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                        </Style>
                                                    </Label.Resources>
                                                    Token:
                                                </Label>
                                                <DockPanel>
                                                    <DockPanel.CommandBindings>
                                                        <CommandBinding x:Name="OkButton" Command="startPageFolder:Command.OkCommand" Executed="CommandBinding_OnExecuted" CanExecute="CommandBinding_OnCanExecute"/>
                                                    </DockPanel.CommandBindings>
                                                    <Button TabIndex="0" x:Name="ApplyTokenButton" DockPanel.Dock="Right" Height="30" Content="OK" Padding="5,0" VerticalAlignment="Center" HorizontalAlignment="Right" Command="startPageFolder:Command.OkCommand" CommandParameter="{Binding ElementName=TokenBox}"/>
                                                    <PasswordBox Name="TokenBox" HorizontalAlignment="Stretch" Margin="0,0,5,0" />
                                                </DockPanel>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Grid.Row="1" TextAlignment="Right">
                                                <Hyperlink NavigateUri="http://twitchapps.com/tmi/"
                                                           RequestNavigate="Hyperlink_RequestNavigate">
                                                    Get Token
                                                </Hyperlink>
                                            </TextBlock>
                                        </Grid>

                                        <Grid Margin="0,10,0,0">
                                            <StackPanel>
                                                <Label Padding="0,5" Margin="0" HorizontalAlignment="Left"
                                                       HorizontalContentAlignment="Left">
                                                    <Label.Resources>
                                                        <Style TargetType="Label">
                                                            <Setter Property="FontWeight" Value="Bold" />
                                                        </Style>
                                                    </Label.Resources>
                                                    Channels:
                                                </Label>
                                                <DockPanel>
                                                    <Button TabIndex="0" Click="Add_Channel" DockPanel.Dock="Right" Name="AddChannelButton"
                                                            Margin="10,0,0,0">
                                                        <Viewbox Height="20" Width="20" Margin="0,4,0,0">
                                                            <vectors:PlusIcon Margin="0" Padding="0" />
                                                        </Viewbox>
                                                    </Button>
                                                    <TextBox x:Name="ChannelTextBox"/>
                                                </DockPanel>
                                                <DockPanel Margin="0,10,0,0">
                                                    <StackPanel DockPanel.Dock="Right" Margin="10,0,0,0">
                                                        <StackPanel.Resources>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Margin" Value="0,0,0,5" />
                                                            </Style>
                                                        </StackPanel.Resources>
                                                        <Button TabIndex="0" IsEnabled="False" Name="RemoveChannelButton" Click="Remove_Channel">
                                                            <Viewbox Height="20" Width="20" Margin="0,4,0,0">
                                                                <vectors:TreshCanIcon Margin="0" Padding="0" />
                                                            </Viewbox>
                                                        </Button>
                                                    </StackPanel>
                                                    <ListBox ItemsSource="{Binding ChannelList, UpdateSourceTrigger=Explicit}" Name="ChannelList" Height="65" SelectionMode="Single" />
                                                </DockPanel>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
                <TabItem Style="{DynamicResource SidebarTabItem}" Width="196" Header="Settings">
                    <TabItem.Content>
                        <Grid>
                            <TextBlock>
                                Comming Soon...
                            </TextBlock>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>